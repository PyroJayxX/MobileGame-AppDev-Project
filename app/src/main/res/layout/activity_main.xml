<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/TitleScreenLayout"
        android:layout_width="411dp"
        android:layout_height="879dp"
        android:background="@drawable/background"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menuScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vinque"
                android:text="Main Menu"
                android:textColor="#931616"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnCredits"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:alpha="0.92"
                android:backgroundTint="#2D4683"
                android:fontFamily="sans-serif-black"
                android:text="CREDITS"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnStartGame"
                app:layout_constraintVertical_bias="0.104" />

            <Button
                android:id="@+id/btnQuit"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:alpha="0.93"
                android:backgroundTint="#2D4683"
                android:fontFamily="sans-serif-black"
                android:onClick="btnQuit"
                android:text="EXIT"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCredits"
                app:layout_constraintVertical_bias="0.156" />

            <Button
                android:id="@+id/btnStartGame"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:alpha="0.92"
                android:backgroundTint="#2D4683"
                android:fontFamily="sans-serif-black"
                android:onClick="btnStart"
                android:text="START GAME"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.206" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="298dp"
                android:layout_height="233dp"
                android:fontFamily="@font/vinque"
                android:shadowColor="#000000"
                android:shadowRadius="15"
                android:text="Fantasy Flip"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FDFDFD"
                android:textSize="75sp"
                android:textStyle="bold"
                android:typeface="sans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.181" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/splashArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loadingScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background2"
            android:backgroundTint="#85D6D6D6"
            android:backgroundTintMode="multiply"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="@android:style/Widget.Holo.Light.ProgressBar.Small"
                android:layout_width="76dp"
                android:layout_height="74dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="388dp"
                android:layout_marginEnd="160dp"
                android:layout_marginBottom="388dp"
                android:indeterminateBehavior="repeat"
                android:progressTint="#6E1F1F"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.466"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>